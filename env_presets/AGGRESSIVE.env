# RSI "сильная перекупленность" — форсированный SELL без ожидания подтверждений
RSI_STRONG_OVERBOUGHT=78

# ============================================
# ФИЛЬТРЫ КАЧЕСТВА BUY (по анализу ошибок 2026-01-14)
# ============================================
# Макс. RSI для BUY (агрессивнее — разрешаем выше)
RSI_MAX_BUY=68
# Блокируем sideways + отрицательный MACD
BLOCK_SIDEWAYS_NEGATIVE_MACD=true
# НЕ требуем строго положительный MACD (агрессивный режим)
REQUIRE_MACD_HIST_POSITIVE_BUY=false
# Разрешаем небольшой минус MACD
