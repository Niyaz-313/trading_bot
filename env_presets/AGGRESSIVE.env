MAX_POSITIONS_PER_CORRELATION_GROUP=3

# Time Filter: не фильтруем время в агрессивном режиме
ENABLE_TIME_FILTER=false
BLOCK_RISKY_HOURS=false

# Автоблокировка символов с плохой статистикой
AUTO_BLOCK_BAD_SYMBOLS=false
AUTO_BLOCK_MIN_TRADES=7
AUTO_BLOCK_MAX_LOSS_RATE=0.80
