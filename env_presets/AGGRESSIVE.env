# Порог высокого лота (UGLD lot=1000) — применяем доп. ограничения
HIGH_LOT_THRESHOLD=100
HIGH_LOT_SIZE_FACTOR=0.4
# Жёсткий лимит стоимости позиции (ПОСЛЕ округления до лотов)
